<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp" >

    <RelativeLayout
        android:id="@+id/rl_card"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:background="@drawable/card_shape">

            <TextView
                android:id="@+id/textViewNumber"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="23sp"
                android:text="200"/>

            <TextView
                android:id="@+id/textViewQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="99"
                android:textStyle="bold"/>


        <ImageView
            android:id="@+id/iv_logo_card"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/logo_redondo"
            android:layout_below="@+id/textViewNumber"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

            <LinearLayout
                android:id="@+id/ll_card_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/iv_logo_card">


                <ImageButton
                    android:id="@+id/buttonRemove"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_weight="5"
                    android:src="@mipmap/ic_action_remove"/>

                <ImageButton
                    android:id="@+id/buttonAdd"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="43dp"
                    android:src="@mipmap/ic_action_add"/>

            </LinearLayout>
    </RelativeLayout>
</RelativeLayout>